<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/wledtvbackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="600dp"
            android:layout_height="250dp"

            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            app:srcCompat="@drawable/wled_logo_akemi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wledButton"
                android:layout_width="50dp"


                style="@style/Widget.AppCompat.Button"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:rotation="0"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                app:backgroundTint="#AE1B1B"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/ColorsButton"

                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/Colors"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                app:backgroundTint="#141519"
                app:icon="@android:drawable/ic_dialog_dialer"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/PalettesButton"

                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/Palettes"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                app:backgroundTint="#141519"
                app:icon="@android:drawable/ic_dialog_dialer"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/EffectsButton"

                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/Effects"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                app:backgroundTint="#141519"
                app:icon="@android:drawable/btn_star_big_on"
                app:iconTint="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/settingsButton"

            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/Settings"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            app:backgroundTint="#141519"
            app:icon="@android:drawable/ic_menu_more"
            app:iconTint="@color/design_default_color_background"
            app:strokeColor="@color/white" />

        <Button
            android:id="@+id/donateButton"

            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/Donate"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            app:backgroundTint="#141519"
            app:iconTint="@color/design_default_color_background"
            app:strokeColor="@color/white" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:text="Background from Pixabay.com"
            android:textAlignment="center"
            android:textColor="#888686"
            android:textSize="12sp" />
    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
